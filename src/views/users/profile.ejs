                <option>Masculino</option>
                <option>Femenino</option>
                <option>Otros</option>
              </select>
            </div>

            <div class="profile-button">
                <button type="submit">APLICAR CAMBIOS</button>
            </div>

            <div class="profile-button">
              <button type="reset">CANCELAR CAMBIOS</button>
            </div>

            <div class="profile-button">
