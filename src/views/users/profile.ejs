              <label for="avatar">Avatar</label>
              <input type="file" name="avatar" id="avatar">
            </div>
            <div>
              <label for="username">Nombre</label>
              <input type="text" name="name" id="username" value="Juan Cruz">
              <i class="fa-solid fa-user"></i>
            </div>
            <div>
              <label for="username">Apellido</label>
              <input type="text" name="lastname" id="userlastname" value="Siryi">
              <i class="fa-solid fa-user"></i>
            </div>
            <div>
              <label for="username">Email</label>
              <input type="email" name="email" id="useremail" value="juancruzsiryi@gmail.com">
              <i class="fa-solid fa-envelope"></i>
            </div>
            <div>
              <label for="username">Contraseña actual</label>
              <input type="password" name="password" id="userpassword" value="********">
              <i class="fa-solid fa-lock"></i>
            </div>
            <div>
              <label for="username">Nueva contraseña</label>
              <input type="password" name="password" id="userpassword" value="********">
              <i class="fa-solid fa-lock"></i>
            </div>
            <div>
              <label for="genre">Género</label>
