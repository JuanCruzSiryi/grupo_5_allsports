<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include ("../partials/header.ejs") %>

    <main>

      
      <div class="main-container">
        <div class="product-title">
          <button 
            onClick="location.href='/users'"
            type="submit"
            class="create-button"
          >
            Atrás
          </button>

          <h4 class="name"><%= user.firstName + " " + user.lastName %></h4>
        </div>
        <div class="product-container">
          <img
          class="image"
          src="/images/users/<%= user.image %>"
          alt="user-image.jpg"
          />

          <div class="product-information">
            <!-- <p class="price">Precio: <%=  %></p>
            <p class="category">Categoría: <%=  %></p>
            <p class="color">Color: <%=  %></p>
            <p class="size">Talle: <%=  %></p> -->

            <div class=" description desktop-description">
              <%= user.email %>
             <br>
              <%= user.category %>
              
            </div>
            <div class="detail-button desktop-buttons">
              <button class ="button-edit" type="submit">
                <a href="/users/<%= user.id %>/edit">Editar</a>
              </button>
    
              <button class= "button-delete" type="submit">
                <a href="/users/<%= user.id %>/delete">Eliminar</a>
              </button>
            </div>
          </div>
          
        </div>
        <!-- <p class="description mobile-buttons">
          <%= user.email %>
        </p> -->

    </main>

    <%- include ("../partials/footer.ejs") %>
  </body>
</html>