<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include ("../partials/header.ejs") %>
    <main>
      <div class="principal-box">
        <div class="title">
          <h2 class="title-register">EDITAR PRODUCTO</h2>
        </div>

        <div class="content-box-register">
          <form
            method="post"
            action="/users/<%=users.id %>/edit/?_method=POST"
            enctype="multipart/form-data"
          >
            <div>
              <label for="firstName">Modificar nombre</label>
              <input
                type="text"
                name="firstName"
                value="<%= users.firstName %>"
              />
            </div>
            <div class="lastName">
              <label for="lastName">Modificar apellido</label>
              <input
                type="text"
                name="lastName"
                id="lastName"
                value="<%= users.lastName %>"
              />
            </div>
            <div>
              <label for="image">Modificar imagen/avatar</label>
              <input type="file" name="image" id="image"
              value="<%= users.image %>"  
              />

            </div>
            <div class="email">
              <label for="email">Modificar email</label>
              <input type="email" name="email" id="email" 
              value="<%= users.email %>"  
              />
            </div>
            <div class="password">
              <label for="password">Modificar contrase√±a</label>
              <input type="password" name="password" id="password" 
              value="<%= users.password %>"
              />
            </div>
            <div class="register-button">
              <button type="submit">APLICAR</button>
            </div>

            <div class="register-button">
              <button type="submit">LIMPIAR</button>
            </div>
          </form>
        </div>
      </div>
    </main>
    <%- include ("../partials/footer.ejs") %>
  </body>
</html>
