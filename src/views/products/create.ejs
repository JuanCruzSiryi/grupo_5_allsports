<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    
    <%- include ("../partials/header.ejs") %>

    <div class="title-navbar">
      <div class="back-button">
        <button type=""><a href="/products?page=1">Atras</a></button>
      </div>
      <h2 class="form-title">CREAR PRODUCTO</h2>
    </div>

    <main>
      <div class="principal-box">

        <!-- <div class="title">
            <h2 class="title-register">INGRESAR NUEVO PRODUCTO</h2>
        </div> -->

        <div class="content-box-register">
          <form method="post" action="/products/create" enctype="multipart/form-data">
            <div>
              <label for="nameProduct">Ingresar nombre</label>
              <input type="text" name="nameProduct" id="nameProduct">
              <% if(locals.errors && errors.nameProduct) { %>
                <p class="text-errors"><%= errors.nameProduct.msg %></p>
              <% } %>
            </div>
            <div class="desc-product">
              <label for="descProduct">Ingresar descripción</label>
              <input type="text" name="descProduct" id="descProduct">
              <% if(locals.errors && errors.descProduct) { %>
                <p class="text-errors"><%= errors.descProduct.msg %></p>
              <% } %>
            </div>
            <div>
              <label for="image">Ingresar imagen</label>
              <input type="file" name="image" id="image">
            </div>
            <div class="color-product">
              <label for="colorsProduct">Colores disponibles</label>
              <br>
              <select name="color" id="color">
                <% colors.forEach(color => { %>
                  <option value=<%= color.id %>><%= color.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="size-product">
              <label for="sizeProduct">Talles</label>
              <br>
              <select name="sizeProduct" id="talles">
                <% sizes.forEach(size => { %>
                  <option value=<%= size.id %>><%= size.eur %></option>
                <% }) %>
              </select>
            </div>
            <div>
              <label for="brandProduct">Marca</label>
              <select name="brandProduct" id="brandProduct">
                <% brands.forEach(brand => { %>
                  <option value=<%= brand.id %>><%= brand.name %></option>
                <% }) %>
              </select>
            </div>
            <div>
              <label for="categoryProduct">Categoría</label>
              <select name="categoryProduct" id="categoryProduct">
                <% categories.forEach(category => { %>
                  <option value=<%= category.id %>><%= category.name %></option>
                <% }) %>
              </select>
            </div>
            <div>
              <label for="priceProduct">Ingresar precio</label>
              <input type="number" name="priceProduct" id="priceProduct">
            </div>
            

            <div class="register-button">
                <button type="submit">Crear</button>
            </div>

            <!-- <div class="register-button">
              <button type=""><a href="/products/">VOLVER</a></button>
            </div> -->

          </form>
        </div>

      </div>
    </main>

    <%- include ("../partials/footer.ejs") %> 

  </body>
</html>