<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include ("../partials/header.ejs") %>

    <main>
      <div class="blank-field">
        <button
          onClick="location.href='/products/create'"
          type="submit"
          class="create-button"
        >
          Create
        </button>
        <h3>Lista de productos</h3>
        <ul>
          <% productsList.forEach(product => { %>

          <div class="product">
            <img
              class="image"
              src="/images/<%= product.image %>"
              alt="product-image.jpg"
            />

            <h4 class="name"><%= product.name %></h4>

            <p class="price">Precio: <%= product.price %></p>
            <div class="other-date">
              <p class="category">Categor√≠a: <%= product.category %></p>
              <p class="color">Color: <%= product.color %></p>
              <p class="size">Talle: <%= product.size %></p>
            </div>
            <br />
            <p class="description">
              <a href="/products/<%= product.id %>"
                ><%= product.description %></a
              >
            </p>
            <br />

            <div class="detail-button">
              <button type="submit">
                <a href="/products/<%= product.id %>/edit">Editar</a>
              </button>

              <button type="submit">
                <a href="/products/<%= product.id %>/delete">Eliminar</a>
              </button>
            </div>
          </div>

          <% }) %>
        </ul>
      </div>
    </main>

    <%- include ("../partials/footer.ejs") %>
  </body>
</html>
