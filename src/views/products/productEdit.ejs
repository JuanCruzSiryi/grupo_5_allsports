<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include ("../partials/header.ejs") %>
    <main>

    <div class="title-navbar">
      <div class="back-button">
        <button type=""><a href="/products">Atrás</a></button>
      </div>
      <h2 class="form-title">EDITAR PRODUCTO</h2>
    </div>

      <div class="principal-box">

        <!-- <div class="title">
            <h2 class="title-register">EDITAR PRODUCTO</h2>
        </div> -->

        <div class="content-box-register">
          <form 
            method="post"
            action="/products/<%=product.id %>/edit/?_method=PUT"
            enctype="multipart/form-data"
          >
            <div>
              <label for="nameProduct">Modificar nombre</label>
              <input 
                type="text" 
                name="nameProduct" 
                id="nameProduct" 
                value="<%= product.name %>"
              >
            </div>
            <div class="desc-product">
              <label for="descProduct">Modificar descripción</label>
              <input 
                type="text" 
                name="descProduct" 
                id="descProduct" 
                value="<%= product.description %>"
              >
            </div>
            <div>
              <label for="image">Modificar imagen</label>
              <input type="file" name="image" id="image">
            </div>
            <div class="color-product">
              <label for="colorsProduct">Modificar colores</label>
              <br>
              <select name="color" id="color">
                <option value="Azul" <%= product.color == "Azul" ? "selected" : "" %>> Azul</option>
                <option value="Blanco" <%= product.color == "Blanco" ? "selected" : "" %>> Blanco</option>
                <option value="Negro" <%= product.color == "Negro" ? "selected" : "" %>> Negro</option>
                <option value="Rojo" <%= product.color == "Rojo" ? "selected" : "" %>> Rojo</option>
              </select>
            </div>
            <div class="size-product">
              <label for="sizeProduct">Modificar talles</label>
              <br>
              <select name="talles" id="talles">
                <option value="36 (EUR 37)" <%= product.size == "36 (EUR 37)" ? "selected" : "" %>> 36 (EUR 37) </option>
                <option value="37 (EUR 38)" <%= product.size == "37 (EUR 38)" ? "selected" : "" %>> 37 (EUR 38) </option>
                <option value="38 (EUR 39)" <%= product.size == "38 (EUR 39)" ? "selected" : "" %>> 38 (EUR 39) </option>
                <option value="39 (EUR 40)" <%= product.size == "39 (EUR 40)" ? "selected" : "" %>> 39 (EUR 40) </option>
                <option value="40 (EUR 41)" <%= product.size == "40 (EUR 41)" ? "selected" : "" %>> 40 (EUR 41) </option>
                <option value="41 (EUR 42)" <%= product.size == "41 (EUR 42)" ? "selected" : "" %>> 41 (EUR 42) </option>
                <option value="42 (EUR 43)" <%= product.size == "42 (EUR 43)" ? "selected" : "" %>> 42 (EUR 43) </option>
                <option value="43 (EUR 44)" <%= product.size == "43 (EUR 44)" ? "selected" : "" %>> 43 (EUR 44) </option>
                <option value="44 (EUR 45)" <%= product.size == "44 (EUR 45)" ? "selected" : "" %>> 44 (EUR 45) </option>
                <option value="45 (EUR 46)" <%= product.size == "45 (EUR 46)" ? "selected" : "" %>> 45 (EUR 46) </option>
              </select>
            </div>
            <div>
              <label for="brand">Modificar marca</label>
              <input 
                type="text" 
                name="brand" 
                id="brand"
                value="<%= product.brand %>"
              >
            </div>
            <div>
              <label for="priceProduct">Modificar categoría</label>
              <select name="categoryProduct" id="categoryProduct">
                <option value="Masculino" <%= product.category == "Masculino" ? "selected" : "" %> >Masculino</option>
                <option value="Femenino" <%= product.category == "Femenino" ? "selected" : "" %> >Femenino</option>
                <option value="Niños" <%= product.category == "Niños" ? "selected" : "" %> >Niños</option>
              </select>
            </div>
            <div>
              <label for="priceProduct">Modificar precio</label>
              <input 
                type="number" 
                name="priceProduct" 
                id="priceProduct" 
                value="<%= product.price %>">
            </div>
            <div>
              <label for="discount">Descuento</label>
              <input type="number" name="discount" id="discount">
            </div>
            
            <div class="register-button">
                <button type="submit">Guardar</button>
            </div>

            <!-- <div class="register-button">
              <button type="reset">LIMPIAR</button>
            </div> -->

            <!-- <div class="register-button">
              <button type=""><a href="/products/">VOLVER</a></button>
            </div> -->

          </form>
        </div>

      </div>
    </main>
    <%- include ("../partials/footer.ejs") %> 
  </body>
</html>