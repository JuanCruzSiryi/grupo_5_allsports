<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include ("../partials/header.ejs") %>

    <main>

      
      <div class="main-container">
        <div class="product-title">
          <button 
            onClick="location.href='/products?page=1'"
            type="submit"
            class="create-button"
          >
            Atras
          </button>

          <h4 class="name"><%= product.name %></h4>

        </div>
        <div class="product-container">
          <img
          class="image"
          src="/images/products/<%= product.image %>"
          alt="product-image.jpg"
          />
          
          <div class="product-information">
            <!-- <p class="price">Precio: <%= product.price %></p>
             -->
            <div class="article-information-div">
                  <!-- <div class="article-logo-shipping"><i class="fa-solid fa-truck"></i></i></div> -->
                  
                  <p class="article-name"><%= product.name %></p>  
                  <% if (product.discount > 0) { %>
                      <div class = "discount">
                        <p class="article-price-discount"><%= product.price %>                     
                        <p  class="article-discount-shipping"> Desc.: <%= product.discount %>%</p>
                      </div>
                  <% } %>
                  <div class="icons">
                    <div class="heart"> <i class="fa-regular fa-heart"></i></div>
                    <a class="cart" href="/productCart"><i class="fa-solid fa-cart-shopping"></i></a>
                  </div>  
                  <div class="article-price">
                    <!-- <p class="article-price-neto"><%= product.price %></p> -->
                    <% finalPrice = product.price - ((product.price* product.discount) / 100) %>
                    <!-- <p class="article-discount">$<%= product.price %></p> -->
                    <p class="price">Precio $:  <%= finalPrice %>
                 </div>
        
                </div>
    
            
            <p class="category">Categor√≠a: <%= product.category.name%></p>
            <p class="color">Color: <%= product.color.name %></p>
            <p class="size">Talle: 
              <select name="sizeProduct" id="talles">
                <% sizes.forEach(size => { %>
                  <option value=<%= size.id %>><%= size.eur %></option>
                <% }) %>
              </select>  
            </p>
            <p class="size">Marca: <%= product.brand.name %></p>
            <p class="size">Tipo: <%= product.tag ? product.tag.name : "" %></p>

            <div class=" description desktop-description">
              <%= product.description %>
            </div>
          
            </div>
              <p class="description mobile-buttons">
               <%= product.description %>
             </p>
            </div>

    </main>

    <%- include ("../partials/footer.ejs") %>
  </body>
</html>